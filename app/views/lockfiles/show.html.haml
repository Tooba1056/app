%section
  = render "compats/table", gemmies: @lockfile.gemmies

= render "email_notifications/form", notifiable: @lockfile

#lockfile-content-modal.modal.fade
  .modal-dialog.modal-dialog-scrollable.modal-lg
    .modal-content
      .modal-header
        %h5.modal-title
          Lockfile content
        %button.close{ type: "button", data: { dismiss: "modal" } }
          %span
            &times;
      .modal-body
        %pre
          = @lockfile.content
      .modal-footer
        = link_to "Close", "#", class: "btn btn-primary", data: { dismiss: "modal" }
